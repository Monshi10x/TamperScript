{
	"javascript.format.placeOpenBraceOnNewLineForControlBlocks": false,
	"javascript.format.placeOpenBraceOnNewLineForFunctions": false,
	"typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,
	"typescript.format.placeOpenBraceOnNewLineForFunctions": false,
	"workbench.colorCustomizations": {
		"editor.background": "#141414",
		"editor.selectionBackground": "#2e2e2e",
		"editor.selectionHighlightBorder": "#0400ff",
		"editor.selectionForeground": "#0004ff",
		"editor.formatOnSave": true,
		"editor.formatOnType": true
	},
	"[javascript]": {
		"editor.formatOnSave": true,
    		"editor.foldingStrategy": "indentation",
	},
	"editor.formatOnPaste": true,
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
	"editor.formatOnSave": true,
	"typescript.format.semicolons": "insert",
  "json.format.enable": true,
  "javascript.format.semicolons": "insert",
  "less.format.newlineBetweenRules": true,
  "editor.defaultFormatter": "vscode.typescript-language-features",
  "editor.tokenColorCustomizations": {
	"comments":"#555",
	"variables": "#ffffff",
	"keywords": "#0051ff",
	"strings": "#099e10",
	"textMateRules": [
		{
			"scope": "storage.modifier.async.js",
			"settings":{
				"foreground": "#ff0000",
				"fontStyle":"bold" 
			}
		},
		{
			"scope": "constant.numeric.decimal.js",
			"settings":{
				"foreground": "#00ffea"
			}
		},
		{
			"scope": "keyword.control.flow.js",
			"settings":{
				"foreground": "#ff0000",
				"fontStyle":"bold" 
			}
		},
		{
			"scope": "entity.name.function.js",
			"settings":{
				"foreground": "#ae00ff"
			}
		},
		{
			"scope": "comment.line.double-slash.js",
			"settings":{
				"fontStyle":"italic"
			}
		},
		{
			"scope": "string.quoted.single.js",
			"settings":{
				"fontStyle":"italic"
			}
		},
		{
			"scope": "string.quoted.double.js",
			"settings":{
				"fontStyle":"italic"
			}
		},
		{
			"scope": "constant.language",
			"settings":{
				"foreground": "#0051ff"
			}
		},
		{
			"scope": "variable.language.this.js",
			"settings":{
				"foreground": "#0051ff"
			}
		},
		{
			"scope": "variable.language.super.js",
			"settings":{
				"foreground": "#0051ff"
			}
		},
		{
			"scope": "entity.name.type.class",
			"settings":{
				"foreground": "#ff4800",
				"fontStyle":"bold" 
			}
		},
		{
			"scope": "entity.name.function.member",
			"settings":{
				"foreground": "#ae00ff"
			}
		},{
			"scope": "storage.type.class.jsdoc",
			"settings":{
				"foreground": "#ff4800",
				"fontStyle":"bold"
			}
		}

		
	]
},
"editor.tabCompletion": "on",
"editor.tabSize": 6,
"prettier.tabWidth": 6,
"editor.fontFamily": "Fira Code",//Fira Code
"editor.fontLigatures": true,
"[json]": {
	"editor.defaultFormatter": "esbenp.prettier-vscode"
},
}
